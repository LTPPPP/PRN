<Window x:Class="assignment01.CustomerHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assignment01"
        mc:Ignorable="d"
        Title="CustomerHomePage" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Customer" Width="100" FontSize="16" FontWeight="Bold" Click="CustomerManagement_Click"/>
                <MenuItem Header="Booking" Width="100" FontSize="16"  FontWeight="Bold" Click="CustomerBooking_Click"/>
            </Menu>
            <Frame x:Name="CustomerPage" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
