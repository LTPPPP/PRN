<Window x:Class="assignment01.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Home" Width="100" FontWeight="Bold" FontSize="16" />
            <MenuItem Header="Customer" Width="100" FontSize="16" FontWeight="Bold" Click="CustomerManagement_Click"/>
            <MenuItem Header="Room" Width="100" FontSize="16" FontWeight="Bold" Click="RoomManagement_Click"/>
            <MenuItem Header="Booking" Width="100" FontSize="16"  FontWeight="Bold" Click="BookingManagement_Click"/>
        </Menu>
        <Frame x:Name="AdminPage" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
